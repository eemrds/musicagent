    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug MusicAgent",
            "type": "debugpy",
            "request": "launch",
            "program": "bot.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "bot.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}